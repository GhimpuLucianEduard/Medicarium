<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Presentation.History.HistoryFragment">


    <ImageButton
        android:id="@+id/medicalTestsImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pureWhite"
        android:src="@drawable/medical_tests" />

    <TextView
        android:id="@+id/medicalTestsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/medical_tests"
        android:textColor="@color/primaryBlack"
        android:textSize="18sp" />


    <ImageButton
        android:id="@+id/drugsImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@color/pureWhite"
        android:src="@drawable/drugs" />

    <TextView
        android:id="@+id/drugsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Drugs history"
        android:textColor="@color/primaryBlack"
        android:textSize="18sp" />


</LinearLayout>