<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/primaryLightGrey</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PinDot">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/transition_drawable_pin_dot</item>
    </style>

    <style name="PinButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:clickable">true</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="ActiveTextBottomNavBar">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/accentRed</item>
    </style>

    <style name="InactiveTextBottomNavBar">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/primaryBlack</item>
    </style>

    <style name="BaseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/primaryLightGrey</item>
        <item name="android:textColor">@color/primaryBlack</item>
    </style>

    <style name="BaseTextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">344dp</item>
    </style>

    <style name="SignUpTextInputLayout" parent="BaseTextInputLayout">
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">196dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pureWhite</item>
    </style>

    <style name="ProgressIndicator">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="TitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>
